<div class="container">
  <h1 class="contact-title">Contact Us</h1>

  <div class="contact-card">
   <%= form_for  @contact do |f| %>
     <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class:"form-control contact-form", required: true %>
     </div>

     <br>

     <div class="form-group">
       <%= f.label :email %><br>
       <%= f.email_field :email, class:"form-control contact-form", required: true %>
     </div>

     <br>
     <div class="form-group">
       <%= f.label :message %><br>
       <%= f.text_area :message, as: :text, class:"form-control contact-form", rows:"8"%>
     </div>

     <br>
      <div class="hidden">
        <%= f.hidden_field :nickname, hint: 'leave this field blank', class:"form-control"  %>
      </div>

     <br>

     <%= f.submit 'Send Message', class: "btn btn-primary contact-button"%>

    <%end%>
  </div>
</div>
