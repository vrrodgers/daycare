<div class="container">

  <%= form_for(@parent) do |f| %>
    <% if @parent.errors.any? %>
      <% @parent.errors.full_messages.each do |error| %>
        <%= alert_generator error%>
      <%end%>
    <% end %>

    <div class="row">

      <div class="col-md-6">
        <div class="form-group">
          <h1>Personal Information</h1>
          <hr>
          <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
        </div>

        <div class="form-group">
          <%= f.text_field :Middle_initial, class: 'form-control', placeholder: 'Middle Initial' %>
        </div>

        <div class="form-group">
          <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
        </div>
      </div>

      <div class="col-md-6">
        <fieldset class="form-group">
          <legend>Gender</legend>
          <div class="form-check">
            <label class="form-check-label">
              <%= f.collection_radio_buttons :gender_id, Gender.all, :id, :name, class:"form-check-input"%>
            </label>
          </div>

        </fieldset>
        <div class="form-group">
          <%= f.collection_select :marital_status_id, MaritalStatus.all, :id, :name %>
        </div>

        <div class="form-group">
            <%= f.collection_select :parent_type_id, ParentType.all, :id, :name %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <%= f.text_field :address, class: 'form-control', placeholder: 'Address' %>
        </div>

        <div class="form-group">
          <%= f.text_field :home_phone, class: 'form-control', placeholder: 'Phone' %>
        </div>

        <div class="form-group">
          <%= f.text_field :cell_phone, class: 'form-control', placeholder: 'Cell Phone' %>
        </div>

        <div class="form-group">
          <%= f.text_field :custodial_parent, class: 'form-control', placeholder: 'Custodial Parent' %>
        </div>

        <div class="form-group">
          <%= f.text_field :mother_social, class: 'form-control', placeholder: 'Social' %>
        </div>

        <div class="form-group">
          <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
        </div>

        <div class="form-group">
          <%= f.text_field :driver_license_number, class: 'form-control', placeholder: 'Driver License Number' %>
        </div>

      </div>
      <div class="col-md-6">
        <div class="form-group">
          <h2>Work Information</h2>
          <%= f.text_field :occupation, class: 'form-control', placeholder: 'Occupation' %>
        </div>

        <div class="form-group">
          <%= f.text_field :employed_by, class: 'form-control', placeholder: 'Employer' %>
        </div>

        <div class="form-group">
          <%= f.text_field :work_address, class: 'form-control', placeholder: 'Work address' %>
        </div>

        <div class="form-group">
          <%= f.text_field :office_phone, class: 'form-control', placeholder: 'Office Phone' %>
        </div>

        <div class="form-group">
          <%= f.text_field :work_hours, class: 'form-control', placeholder: 'Work Hours' %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
